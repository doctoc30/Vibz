                <i class="fas fa-certificate text-3xl peach-text"></i>
                <i class="fas fa-award text-3xl peach-text"></i>
                <i class="fas fa-shield-alt text-3xl peach-text"></i>
            </div>
        </div>
        <div class="grid grid-cols-2 gap-4" data-aos="fade-left">
            <div class="h-64 rounded-3xl bg-orange-100 p-8 flex items-end">
                <h3 class="text-2xl font-black">2D Style Specialists</h3>
            </div>
            <div class="h-64 rounded-3xl peach-grad mt-8"></div>
        </div>
    </section>

    <section class="py-24 bg-white">
        <h2 class="text-center text-4xl font-black mb-16 uppercase">Signature Blueprints</h2>
        <div class="max-w-7xl mx-auto px-8 grid grid-cols-1 md:grid-cols-3 lg:grid-cols-6 gap-6">
            <script>
                const styles = ["The Taper", "The Crop", "The Fade", "The Quiff", "The Buzz", "The Pompadour"];
                for(let i=1; i<=6; i++) {
                    document.write(`
                        <div class="hair-card p-8 text-center" data-aos="zoom-in" data-aos-delay="${i*100}">
                            <div class="w-20 h-20 mx-auto mb-4 bg-orange-50 rounded-full flex items-center justify-center">
